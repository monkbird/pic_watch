{
  "name": "picwatch-desktop",
  "private": true,
  "version": "1.0.7",
  "description": "PicWatch: 快速浏览、分组与元数据查看的图片管理工具",
  "main": "electron/main.js",
  "type": "module",
  "author": "monkbird",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently --kill-others-on-fail \"cross-env BROWSER=none npm run dev\" \"wait-on tcp:5173 && electron .\"",
    "electron:build": "vite build && electron-builder"
  },
  "dependencies": {
    "@xenova/transformers": "^2.17.2",
    "clsx": "^2.1.1",
    "exifr": "^7.1.3",
    "lucide-react": "^0.454.0",
    "piexifjs": "^1.0.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.6.0"
  },
  "optionalDependencies": {
    "electron-clipboard-ex": "^1.3.3"
  },
  "devDependencies": {
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.14",
    "vite": "^5.4.8",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.picwatch.app",
    "productName": "PicWatch",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "maintainer": "monkbird <monkbird@example.com>",
      "synopsis": "PicWatch 图片管理与浏览",
      "description": "浏览与分组查看图片，支持 EXIF/IPTC 元数据提取与筛选。",
      "category": "Graphics"
    },
    "win": {
      "target": "nsis"
    }
  }
}